.bindPhoneNumber-container {
    width: 100%;
    height: 100%;
    padding: 0 24px;
    box-sizing: border-box;
}

.bind-tel-title {
    padding-top: 21px;
    padding-bottom: 36px;
}

.form-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
    border-bottom: solid 0.5px #dddddd;
}

.phone-input {
    flex: 1;
    height: 70px;
    line-height: 70px;
    box-sizing: border-box;
    padding: 0 8px;
}

.validateCode-input {
    padding-left: 8px;
}

.tel-code {
    width: 90px;
    height: 36px;
    text-align: center;
    line-height: 36px;
    background-color: rgba(0,130,220,0.12);
    border-radius: 50px;
}

.sure {
    height: 48px;
    line-height: 48px;
    border-radius: 50px;
    margin-top: 60px;
}