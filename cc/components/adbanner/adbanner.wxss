.swiper-block {
    position: relative;
    width: 100%;
}

.ad-close-bg {
    position: absolute;
    top: 0;
    right: 0;
    height: 20px;
    width: 20px;
    background-color: #333333;
    opacity: 0.3;
    color: rgba(0,0,0,0.6);
    z-index: 2;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.ad-close-icon {
    width: 20px;
    height: 20px;
}

.ad-click-close {
    position: absolute;
    top: 0;
    right: 0;
    height: 12px;
    width: 12px;
    z-index: 2;
}

.swiper-class {
    height: 200rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.ad-banner-container {
    overflow: hidden;
}