.card-decoration {
    position: absolute;
    top: 0;
    width: 18rpx;
    height: 100%;
}

.decoration-left {
    left: 0;
}

.decoration-right {
    right: 0;
}

.card-content {
    position: relative;
    height: 312rpx;
    display: flex;
    flex-direction: column;
}

.prize-header {
    margin: 0 16rpx;
    padding-top: 40rpx;
    text-align: center;
    color: #666;
    background: #fff;
    font-size: 32rpx;
}

.prize-content {
    margin: 0 16rpx;
    flex: 1;
    background: #fff;
    display: flex;
    text-align: center;
    align-items: center;
    color: #333;
    font-weight: 700;
    word-break: break-all;
    padding-bottom: 52rpx;
}

.prize-code {
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    line-height: 54rpx;
    word-break: break-all;
}

.prize-amount {
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    line-height: 54rpx;
    word-break: break-all;
}

.prize-money {
    font-size: 48px;
}

.footer-actions {
    z-index: 10;
    width: 100%;
    height: 52rpx;
    display: flex;
    line-height: 52rpx;
    color: #FF7052;
    font-size: 24rpx;
    background: rgba(255,112,82,0.08);
    position: absolute;
    bottom: 0;
}

.action-deadline {
    margin-left: 20rpx;
    flex: 1;
}

.action-btn {
    line-height: 52rpx;
    margin-right: 20rpx;
}