page {
    width: 100%;
    height: 100%;
}

.err_box {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: #f0f0f5;
}

.err_text {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0,0,0,0.54);
    line-height: 39px;
    margin-bottom: 24rpx;
}

.err_icon {
    width: 170rpx;
    height: 230rpx;
    margin-bottom: 54rpx;
}

.retry_btn {
    width: 420rpx;
    height: 72rpx;
    background: rgba(255,255,255,1);
    border-radius: 4rpx;
    border: 1px solid #aaa;
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(102,102,102,1);
    display: flex;
    align-items: center;
    justify-content: center;
}