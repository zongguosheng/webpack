.kanjia-bg {
    background: #FF6043;
    background-size: 100% auto;
    width: 100%;
    height: 100%;
    overflow: scroll;
    position: fixed;
    z-index: 1;
}

.kanjia-btn {
    margin: 0 auto;
    height: 96rpx;
    line-height: 96rpx;
    background: linear-gradient(rgba(251,242,78,1),rgba(251,242,78,1) 4%,rgba(255,187,18,1) 96%,rgba(255,187,18,1));
    border-radius: 48rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #944F20;
    text-align: center;
}

.kanjia-scale {
    animation: kanjia-scale-keyframes 0.8s infinite;
}

@-webkit-keyframes kanjia-scale-keyframes {
    50% {
        transform: scale(1.08);
    }
}

@keyframes kanjia-scale-keyframes {
    50% {
        transform: scale(1.08);
    }
}

.money-color {
    color: #FF7052;
}

.float-action {
    width: 96rpx;
    height: 96rpx;
    position: fixed;
    bottom: 16rpx;
    right: 16rpx;
    z-index: 10;
}

.timer-outer {
    font-size: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.timer-number-outer {
    font-size: 24rpx;
    text-align: center;
    padding: 0 6rpx;
    margin-right: 8rpx;
    color: #666;
    background: #FFD800;
}

.timer-unit-outer {
    font-size: 28rpx;
    text-align: center;
    padding: 0 6rpx;
    margin-right: 8rpx;
    color: #aaa;
}

.timer-outer-2 {
    font-size: 100rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.timer-number-outer-2 {
    font-size: 24rpx;
    padding: 0 6rpx;
    margin-right: 8rpx;
    color: #666;
    background: #FFD800;
}

.timer-unit-outer-2 {
    font-size: 24rpx;
    text-align: center;
    margin-right: 8rpx;
    color: #666;
}

.action-btn {
    margin: 0 auto;
    height: 96rpx;
    line-height: 96rpx;
    background: linear-gradient(rgba(251,242,78,1),rgba(251,242,78,1) 4%,rgba(255,187,18,1) 96%,rgba(255,187,18,1));
    border-radius: 48rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #944F20;
    text-align: center;
}