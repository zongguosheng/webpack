        </view>
        <view class="li">
           <image src="../images/img4.jpg" mode="aspectFill"></image>
           <view>择偶要求</view>
        </view>
        <view class="li">
           <image src="../images/img5.jpg" mode="aspectFill"></image>
           <view>性格爱好</view>
        </view>
        <navigator url="../realname/realname" class="li">
           <image src="../images/img6.jpg" mode="aspectFill"></image>
           <view>实名认证</view>
        </navigator>
    </view>
    <view class="sublist">
        <view class="li">
            <view>加入红娘</view>
            <view class="iconfont iconright"></view>
        </view>
        <view class="li">
            <view>我的消息</view>
            <view class="iconfont iconright"></view>
        </view>
        <view class="li">
            <view>修改密码</view>
            <view class="iconfont iconright"></view>
        </view>
        <view class="li">
            <view>关于我们</view>
