.tags {
    height: 48px;
    white-space: nowrap;
    display: flex;
    flex-direction: row;
}

.tag-item {
    height: 100%;
    margin-left: 16px;
    font-weight: 500;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}

.tag-name {
    font-size: 12px;
    color: #666;
}

.tag-active {
    font-size: 12px;
    background-color: rgba(0,130,220,0.12);
    color: #0082dc;
    padding: 4px 8px;
    border-radius: 12px;
}