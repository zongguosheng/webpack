.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.modal-content {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  width: 500rpx;
  height: 500rpx;
  border-radius: 20rpx;
  padding: 50rpx;
}

.text {
  width: 400rpx;
  height: 300rpx;
}

.button {
  width: 400rpx;
  height: 100rpx;
}