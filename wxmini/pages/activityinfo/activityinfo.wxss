/* pages/activityinfo/activityinfo.wxss */
.content{padding: 32rpx 32rpx 0 32rpx; border-bottom: 4px solid #f5f5f5;}
.p30{padding: 32rpx 32rpx 60rpx 32rpx;}
.activitylist{position: relative; margin-bottom: 40rpx;}
.activitylist image{ width: 686rpx; height: 276rpx; border-radius: 5px;}
.activitylist .h2{ 
  font-size: 32rpx; 
  font-weight: bold; 
  color: #292929; 
  line-height: 80rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
  overflow:hidden;
  display: -webkit-box;
  -webkit-line-clamp:1; /*这个数字是设置要显示省略号的行数*/
  -webkit-box-orient:vertical;
}
.activitylist .time,.activitylist .address{ font-size: 24rpx; color: #808080; line-height: 20px;}
.activitylist .time text{margin-right: 10px; height: 24px; display: inline-block; line-height: 20px;}
.rich-text-wrp{ border-bottom: 1px solid #e6e6e6; padding: 10px 0 60rpx;}
.rich-text-wrp .title{ font-size: 32rpx; color: #ff4772; line-height: 80rpx; font-weight: bold;}
.rich-text-wrp .f24{font-size: 24rpx; color: #292929; line-height: 48rpx; }
.rich-text-wrp .fw{font-weight: bold; padding: 0; margin: 0; line-height: 24px;}
.enroll-btn{ 
  background: #ff4772; 
  color: #fff;
  font-weight: normal; 
  font-size: 32rpx; 
  height: 86rpx;
  font-family: Microsoft YaHei; 
  border-radius: 43rpx;
  margin-top: 30rpx; 
  width: 90% !important;
}
