.shieldLanzhou {
    width: 100%;
    height: 100%;
    background-color: #0082dc;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10000001;
    letter-spacing: 3rpx;
}

.shieldLanzhou_inner {
    background-color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 20rpx;
    width: 80%;
    padding: 60rpx 45rpx;
    box-sizing: border-box;
}

.title {
    font-weight: bold;
    font-size: 36rpx;
    margin-bottom: 26rpx;
    color: #333;
    text-align: center;
}

.desc {
    line-height: 54rpx;
    font-size: 32rpx;
    margin-bottom: 38rpx;
    color: #333;
}

.tips {
    margin-bottom: 38rpx;
    line-height: 42rpx;
    font-size: 28rpx;
    color: red;
}

.download {
    margin: 0 auto;
    background-color: #0082dc;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 237rpx;
    height: 80rpx;
    border-radius: 1000rpx;
    font-size: 30rpx;
    font-weight: bold;
}

.sec-others {
    margin-top: 36rpx;
    font-size: 28rpx;
}

.sec-others-em {
    color: #0082dc;
    text-decoration: underline;
    display: inline;
    font-size: 28rpx;
}