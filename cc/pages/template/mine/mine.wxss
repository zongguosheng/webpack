.user-info {
    height: 92px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 8px;
}

.user-info-box {
    position: absolute;
    left: 20px;
    bottom: 18px;
}

.fail-box {
    position: absolute;
    left: 16px;
    bottom: 17px;
}

.login-title {
    text-align: left;
    margin-left: 16px;
    margin-bottom: 42px;
    max-width: 70%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.bind-tel {
    width: 66px;
    height: 18px;
    line-height: 18px;
    border-radius: 4px;
    box-sizing: border-box;
}

.arrow-right {
    width: 4px;
    height: 6px;
    margin-left: 4px;
}

.user-portrait {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 29px;
    margin-bottom: 24px;
}

.item-area {
    margin: 8px 8px 0px 8px;
    border-radius: 10px;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.04);
}

.item-wrap {
    padding: 2px 0;
}

.flex-item {
    height: 48px;
    padding: 0 18px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-icon {
    width: 24px;
    height: 24px;
    margin-right: 10px;
}

.red-circle {
    width: 6px;
    height: 6px;
    background-color: #ff5a00;
    margin-left: 5px;
    border-radius: 50%;
}

.phoneNumber {
    width: 69px;
    height: 18px;
    text-align: center;
    line-height: 18px;
    border-radius: 4px;
    border: solid 1px rgba(0,130,220,0.24);
    background-color: rgba(0,130,220,0.12);
}

.serviceBtn {
    width: 100%;
    height: 100%;
}

.ad-area {
    padding-bottom: 58px;
}

.mine-ad-block {
    position: relative;
    margin: 8px;
}

.customer_service {
    position: fixed;
    bottom: 124rpx;
    right: 24rpx;
    width: 96rpx;
    height: 96rpx;
    border-radius: 100%;
    overflow: hidden;
    background-color: #f0f0f5;
    box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.04);
}

.customer_service.iphoneX {
    bottom: 197rpx;
}

.service_btn_img {
    width: 100%;
    height: 100%;
}