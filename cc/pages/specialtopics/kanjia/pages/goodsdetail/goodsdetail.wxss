@import "../../../../../__wuBaseWxss__/5.wxss";

.card-section {
    margin: 32rpx 32rpx 0;
}

.flex-row {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.page-goods {
    padding-bottom: 132rpx;
}

.congratulation {
    text-align: center;
    font-size: 48rpx;
    font-weight: bold;
    color: #fff;
    margin-top: 32rpx;
}

.goods-card {
    position: relative;
    display: flex;
    margin: 32rpx auto 0;
    width: 686rpx;
    height: 312rpx;
}

.border-decoration {
    width: 18rpx;
    height: 100%;
}

.card-content {
    position: relative;
    flex: 1;
    background: #fff;
    display: flex;
    flex-direction: column;
}

.prize-header {
    color: #666;
    font-size: 28rpx;
    padding-top: 48rpx;
}

.prize-content {
    flex: 1;
    display: flex;
    align-items: center;
    color: #333;
    font-weight: 700;
    word-break: break-all;
}

.prize-code {
    width: 100%;
    font-size: 40rpx;
    line-height: 54rpx;
    word-break: break-all;
}

.prize-coupon {
    width: 100%;
    font-size: 32rpx;
    line-height: 54rpx;
    word-break: break-all;
}

.prize-amount {
    font-size: 48px;
}

.prize-footer,.prize-action {
    height: 52rpx;
}

.prize-action {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: left;
    line-height: 52rpx;
    background: rgba(255,112,82,0.08);
    border-radius: 0 0 20rpx 20rpx;
    color: #FF7052;
    font-size: 24rpx;
}

.prize-action-deadline {
    margin-left: 20rpx;
}

.btn-jump {
    position: absolute;
    line-height: 52rpx;
    right: 20rpx;
    top: 0;
}

.rule-card {
    display: flex;
    flex-direction: column;
    align-content: center;
    margin: 48rpx 32rpx 152rpx;
    padding: 48rpx 32rpx;
    border-radius: 20rpx;
    color: #fff;
}

.rule-header {
    position: relative;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
}

.rule-title {
    height: 100%;
    font-size: 32rpx;
    padding-bottom: 16rpx;
    font-weight: 500;
}

.rule-header-action {
    position: absolute;
    right: 0;
    height: 100%;
    font-size: 24rpx;
}

.rule-text {
    font-size: 28rpx;
}

.goods-qr-code {
    margin: 64rpx auto;
    width: 260rpx;
    height: 260rpx;
}

.special-text {
    color: #FEC61E;
    text-decoration: underline;
}

.bottom-container {
    width: 100%;
    height: 128rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}

.btn-share {
    width: 646rpx;
    margin: 16rpx auto 0;
}