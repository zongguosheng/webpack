.live-info-swiper {
    background: rgba(255,255,255,0.2);
    width: 100%;
    height: 60rpx;
}

.swiper-item {
    color: #FFFEFD;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.swiper-text {
    padding: 0 40rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}