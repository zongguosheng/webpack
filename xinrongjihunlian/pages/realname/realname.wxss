.uploadimg{ display: flex; flex-direction: row; margin-top: 50rpx; margin-bottom: 100rpx;}
.uploadimg view{flex: 1 1 0px; text-align: center;}
.uploadimg view image{ width: 321rpx; height: 206rpx;}
