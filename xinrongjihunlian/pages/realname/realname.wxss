.content{padding: 0 10px;}
.inputgroup{ 
  display: flex; 
  flex-direction: row; 
  justify-content: space-between; 
  height: 100rpx; 
  line-height: 100rpx; 
  font-size: 28rpx;
  border-bottom: 1px solid #e6e6e6;
}
.upload{ margin-top: 50rpx;}
