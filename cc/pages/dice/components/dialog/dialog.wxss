.dialog {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    background: rgba(0,0,0,0.75);
    z-index: 10;
}

.body {
    position: relative;
    background: #fff;
    border-radius: 40rpx;
    padding: 20rpx;
    border: 20rpx solid rgba(94,135,212,1);
}

.btn-close {
    position: absolute;
    top: -64rpx;
    right: -64rpx;
    z-index: 1;
    width: 84rpx;
    height: 84rpx;
}