.shop-container .search {
    margin: 0 16px;
}

.shop-categories {
    height: 48px;
    padding: 0 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.shop-category {
    margin-right: 16px;
    display: inline-block;
}

.shop-more-ico {
    width: 24px;
    height: 24px;
}

.shop-categories-modal {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.24);
    z-index: 3;
    overflow: hidden;
}

.shop-categories-dialog {
    padding: 4px 16px 8px;
}

.shop-collapse-ico {
    width: 24px;
    height: 24px;
    float: right;
    margin-top: 12px;
}

.shop-categories-list {
    line-height: 36px;
}

.shop-categories-row {
    display: flex;
    justify-content: space-between;
    margin: 0 -4px 8px;
}

.shop-categories-item {
    width: 100%;
    height: 36px;
    margin: 0 4px;
    border-radius: 18px;
    background-color: #fbfbfd;
}

.shop-no-categories {
    background: white!important;
}

.shop-separator {
    height: 1px;
    background-color: rgba(0,0,0,0.04);
    clear: both;
}

.shop-sort {
    display: inline-block;
    width: 25%;
}

.shop-sort-default-ico {
    width: 12px;
    height: 12px;
    vertical-align: middle;
}

.shop-goods {
    display: flex;
    padding: 0 16px 16px;
}

.shop-categories-container {
    z-index: 2;
}

.shop-goods-image {
    position: relative;
    width: 120px;
    height: 120px;
    min-width: 120px;
    margin-right: 8px;
    border-radius: 4px;
    z-index: 1;
}

.shop-goods-default-image {
    position: absolute;
    width: 120px;
    height: 120px;
    min-width: 120px;
    margin-right: 8px;
    border-radius: 4px;
}

.shop-goods-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.shop-goods-name {
    height: 42px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.shop-discount {
    margin-top: -4px;
}

.shop-duoduo {
    margin-top: -6px;
    text-decoration: line-through;
}

.shop-goods-buy {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.shop-goods-ticket {
    padding: 2px 4px;
    border-radius: 4px;
    background-color: rgba(255,90,0,0.08);
    border: solid 1px rgba(255,87,34,0.24);
}

.shop-goods-btn {
    width: 112px;
    height: 32px;
    line-height: 32px;
    border-radius: 16px;
    background-image: linear-gradient(to right,#ffaf00,#ff5a00);
}

.back-to-top {
    position: fixed;
    right: 16px;
    bottom: 66px;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.9);
    box-shadow: 0 2px 4px 0 rgba(0,130,220,0.24);
    display: flex;
    justify-content: center;
    align-items: center;
}

.back-to-top-x {
    bottom: 100px;
}

.back-to-top-ico {
    width: 24px;
    height: 24px;
}

.search-empty-ico {
    width: 120px;
    height: 120px;
    margin: 60px 0 30px;
}

.sort-disabled {
    color: #aaaaaa!important;
}

.shop-load-more {
    height: 60px;
    margin-bottom: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shop-load-more view {
    width: 5px;
    height: 5px;
    margin: 0 5px;
    border-radius: 50%;
    background: #aaaaaa;
}

.categories-fixed {
    position: fixed;
    top: 0;
    width: 100%;
}

.shop-goods-padding {
    margin-top: 93px;
}

.category-scroll {
    width: calc(100% - 40px);
    height: 100%;
    white-space: nowrap;
}

.search-no-more {
    padding: 14px 0 128px;
}

.shop-category-active {
    width: 12px;
    height: 2px;
    margin: -10px auto 0;
    background: #ff5a00;
    border-radius: 10rpx;
}

.modal-category-active {
    background: rgba(255,87,34,0.12);
    color: #ff5722;
}

.shop-category-hover {
    background: #f0f0f5;
}

.shop-categories-opacity {
    position: absolute;
    right: 56px;
    width: 8px;
    height: 48px;
    background-image: linear-gradient(to left,#ffffff,rgba(255,255,255,0));
}