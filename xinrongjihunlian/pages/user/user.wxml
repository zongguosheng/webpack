<view class="content">
    <view class="header">
        <view class="userimage">
            <image src="../images/temp/img7.jpg" mode="aspectFill"></image>
        </view>
        <view class="userinfo">
            <view class="username">
                <view class="name">崔女士</view>
                <view class="p5"><text>26岁</text><text>企业行政</text><text>洛龙区</text></view>
            </view>
            <view class="speed">
                  <view class="li">
                      <view>19</view>
                      <view class="text">关注</view>
                  </view>
                  <view class="li">
                      <view>27</view>
                      <view class="text">参与活动</view>
                  </view>
                  <view class="li">
                      <view>56%</view>
                      <view class="text">资料完整度</view>
                  </view>
            </view>
        </view>
        <view class="p10"> 
            <view bindtap="gotopersoninfo" class="iconfont iconright more"></view>
        </view>
    </view>
    <view class="mainlist">
        <navigator url="../basicdata/basicdata" class="li">
           <image src="../images/img1.jpg" mode="aspectFill"></image>
