body{height: 100%;}
.containers{ display: flex; flex-direction: row; }
.nav_left { background: #f2f2f2; width: 25%; height: 100%;}
.nav_left .nav_left_items{ background: #f2f2f2; line-height: 100rpx; padding: 0 20rpx; border-bottom: 1px sold #e6e6e6;}
.nav_left .active{ background: #fff;}
.nav_right{ width:75%;}
.classlist{ display: flex; flex-flow: row wrap;  margin: 0 auto}
.classlist view image{ width: 40px; height: 40px; margin: 0 auto;}
.classlist view {
    padding: 15px;
    display: flex;
    width: 33%;
    height: 33%;
    flex-direction: column;
    justify-content: center;
    text-align: center;
}
.classlist view text{text-align: center; font-size: 22rpx; color: #404040;}
