.mask-content {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 542rpx;
    height: 684rpx;
    margin: 0 auto;
}

.dl-bg-img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.dl-header,.dl-body,.dl-footer,.dl-actions {
    z-index: 1000;
}

.dl-close {
    position: absolute;
    bottom: -100rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dl-close-action {
    margin-top: 48rpx;
    width: 64rpx;
    height: 64rpx;
}

.dl-body {
    text-align: center;
}

.body-header {
    margin-top: 296rpx;
    font-size: 38rpx;
    font-family: PingFangSC-Semibold;
    font-weight: bold;
    color: rgba(0,110,232,1);
    line-height: 40rpx;
    letter-spacing: 3rpx;
}

.body-body {
    width: 438rpx;
    margin-top: 31rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(102,102,102,1);
    line-height: 37rpx;
    letter-spacing: 2rpx;
}

.body-footer {
    margin-top: 37rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.body-footer-action {
    width: 426rpx;
    height: 76rpx;
    background: rgba(0,110,232,1);
    border-radius: 37rpx;
    text-align: center;
    font-size: 35rpx;
    font-family: PingFangSC-Semibold;
    font-weight: bold;
    color: rgba(255,255,255,1);
    line-height: 76rpx;
    letter-spacing: 6rpx;
}